@using System.Security.Claims;
@using API.Library

@{
	 Layout = "~/Views/Shared/Layout/CandidateLayout.cshtml";
	 ViewData["Title"] = "Resource Placemant - Admin";
	 string UserID = ((ClaimsIdentity)User.Identity).GetSid();
	 string fullname = ((ClaimsIdentity)User.Identity).GetName();
}

<!-- Breadcrumb-->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Welcome, @fullname</h1>
    <ol class="breadcrumb">
        @*
        <li class="breadcrumb-item"><a href="./">Home</a></li>*@
        <li class="breadcrumb-item"><a href="#">Candidate</a></li>
        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
    </ol>
</div>

<!--Content-->
<div class="row mb-3">
    <div class="col">
        <div class="alert alert-light w-100" role="alert">
            <h6><i class="fas fa-bullhorn"></i><b> Informasi...!!!</b></h6>
            Untuk para candidate harap selalu cek email, karena setiap pemberitahuan akan dikirim via email.
        </div>
    </div>
</div>

<div class="row mb-3" id="card-content">
    <div class="col-xl-12 col-md-12 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">No Offering</div>
                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">Belum Ada Offering Dari Manager</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check fa-2x text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3">
    <!-- Invoice Example -->
    <div class="col-xl-12 col-lg-12 mb-4">
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Interview History</h6>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Project</th>
                            <th>Reqire Skill</th>
                            <th>Jadwal Interview</th>
                            <th>Jam</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="tblResult">
                        <tr>
                            <td colspan="5" class="text-center"><span>Tidak Ada History Interview</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>


@section Script{
<script>
    const userID = "@UserID";
</script>
<script type="text/javascript" src="~/js/candidate.js"></script>
}