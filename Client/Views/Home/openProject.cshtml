@{
    Layout = "~/Views/Shared/Layout/DashboardLayout.cshtml";
    ViewData["Title"] = "Resource Placemant";
}


<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Assign Project</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
        <li class="breadcrumb-item">Project</li>
        <li class="breadcrumb-item">Open Project</li>
    </ol>
</div>


<input id="project" value="open" hidden>   </INPUT>

<!--Content-->
<div class="row mb-3">
    <div class="col">
        <div class="alert alert-light w-100" role="alert">
            <h6><i class="fas fa-bullhorn"></i><b> Informasi...!!!</b></h6>
            Menu ini digunakan untuk penempatan pegawai pada project yang tersedia..
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Project List</h6>
    </div>
    <div class="card-body">
        <div class=" col">
            <button type="button" class="btn ml-1 text-left btn-dark btn-lg" onclick="downloadExcel();"><i class="fa fa-file-excel-o"></i> Excel </button>
            <button type="button" id="showButton" class="btn ml-1 text-left btn-info btn-lg" onclick="showCandidate();"> <i class="far fa-eye"> Show </i></button>
        </div>
        <table class="table" id="listProject">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Client_Id</th>
                    <th>Project</th>
                    <th>Kapasitas</th>
                    <th>Kapasitas Terisi</th>
                    <th>Reqire Skill</th>
                    <th>Status</th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody id="tblResult">
                <tr>
                    <td colspan="5" class="text-center"><span>Belum ada Project yang Tersedia</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="card mb-4" id="listcandidate" hidden>
	<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
		<h6 class="m-0 font-weight-bold text-primary" id="headercandidate">Candidate List</h6>
	</div>
	<div class="table-responsive">
		<div class="card-body">
			<table class="table align-items-center table-flush" id="listPortofolio">
				<thead class="thead-light">
					<tr>
						<th>User_Id</th>
						<th>Full Name</th>
						<th>Fundamental C#</th>
						<th>Back-End </th>
						<th>Front-End</th>
						<th>Score</th>
						<th>Grade</th>
					</tr>
				</thead>
				<tbody id="tblResult">
					<tr>
						<td colspan="7" class="text-center"><span>Belum terdapat candidate yang sudah memiliki nilai</span></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h3 class="modal-title w-100 text-center" id="exampleModalLongTitle" name="judul">Assign Project</h3>
					<button type="button" class="close" data-dismiss="modal" aria-label="Submit">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>

				<div class="modal-body">
					<form class="needs-validation" id="inputForm" name="inputForm" novalidate>
						<div class="form-group form-row" hidden>
							<div class="col mb-3">
								<input type="text" class="form-control" id="interviewproses" name="interviewproses" value="Waiting">
							</div>
						</div>
						<div class="form-group form-row" hidden>
							<div class="col mb-3">
								<input type="text" class="form-control" id="readby" name="readby" value="Manager">
							</div>
						</div>
						<div class="form-group form-row">
							<div class="col mb-3">
								<label for="projectid"> Project Id</label>
								<input type="text" class="form-control" id="projectid" name="projectid" placeholder="Project Id" disabled>
							</div>
						</div>
						<div class="form-group row mb-3">
							<div class="col">
								<label for="userid">User Id</label>
								<input type="text" class="form-control" id="userid" name="userid" placeholder="User Id">
							</div>
						</div>
						<div class="form-group row">
							<div class="col">
								<label for="interviewdate">Tanggal Interview</label>
								<input type="date" class="form-control" id="interviewdate" name="interviewdate" placeholder=">Tanggal Interview">
							</div>
						</div>
						<div class="form-group row mb-3">
							<div class="col">
								<label for="deskripsi">Deskripsi</label>
								<input type="text" class="form-control" id="deskripsi" name="deskripsi" placeholder="Deskripsi">
							</div>
						</div>
					</form>
					<div class="modal-footer">
						<button type="button" id="btnsubmit" class="btn btn-primary" onclick="Validate();">Submit</button>
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
	</div>

	@section Script{

		<!-- Datatables Script-->
		<script type="text/javascript" charset="utf8" src="~/vendor/datatables/jquery.dataTables.js"></script>
		<script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
		<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>

		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.2.1/dist/sweetalert2.all.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
		<script type="text/javascript" src="~/js/AssignProject.js"></script>
	}
